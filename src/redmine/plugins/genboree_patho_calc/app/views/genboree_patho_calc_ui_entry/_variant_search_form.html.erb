<form id="variantSearchForm">
  <div class="form-group row">
    <!--<label for="inputFName" class="col-sm-4 col-form-label">First Name</label>-->
    <div class="col-sm-10">
      <div class="input-group">
        <%
          placeholder = ""
          inputId = ""
          if(@searchTgt == :alleleRegistry)
            placeholder = "Search registry by CAID or HGVS expression..."
            inputId = "search_string_for_registry"
          else
            placeholder = "Search your collection by CAID..."
            inputId = "search_string_for_coll"
          end
        %>
        <input type="text" class="form-control" id="<%=inputId%>" placeholder="<%=placeholder%>">
        <span class="input-group-btn">
          <%
            if(@searchTgt == :alleleRegistry)
          %>
            <button  class="btn btn-default" type="button" onclick="searchAlleleRegistry();">Search</button>
          <%
            else
          %>
            <button  class="btn btn-default" type="button" onclick="searchAlleleInCollection();">Search</button>
          <%
            end
          %>
        </span>
      </div>
      <div class="example-text">
        <div>
          <b>CAID example:</b> CA321211
        </div>
        <%
          if(@searchTgt == :alleleRegistry)
        %>
          <div>
            <b>HGVS example: </b>  NM_002496.3:c.64C>T, ENST00000413465.6:c.637C>T
          </div>
        <%
          end
        %>
      </div>
    </div>
  </div>
</form>